@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

@* User Index Page *@

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>

<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<script src="~/Angular/Angular.js"></script>
<script src="~/Angular/UserController.js"></script>
<br />
<!DOCTYPE html>
<html>
<head>
    <title>User Creation</title>
</head>
<body ng-app="myApp" ng-controller="myController">

    <div class="container">

        <div class="row">
            <p>
                &nbsp;&nbsp;&nbsp;&nbsp;
        <button class="btn btn-primary btn-xs add-user" data-toggle="modal" data-target="#myModal">
            <i class="fa fa-user-plus " style="font-size: 20px" id="AddUser"><span class="">Add User</span></i>
        </button>
            </p>

        </div>
        <div class="row">
            <div class="col-sm-12">
                <table id="myDatatable" class="table table-striped table-bordered display">
                    <thead>
                        <tr class="bg bg-primary" style="font-weight: bold; background-color: #286090; color: white">
                            <th>User Name</th>
                            <th>EmailId</th>
                            <th>Contact No</th>
                            <th>User Type</th>
                            <th>Status</th>
                            @*<th>Edit</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="User in UserDetails">
                            <td>{{User.UserName}}</td>
                            <td>{{User.EmailID}}</td>
                            <td>{{User.ContactNo}}</td>
                            <td>{{User.UserType}}</td>
                            <td>{{User.Status}}</td>
                          @*  <td>
                                <button type="button" id="Edit" class="btn btn-primary" data-toggle="modal" data-target="#myModal"><i class="fa fa-refresh" aria-hidden="true"></i></button>
                            </td>*@
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>

        <form>
            <!-- The Modal -->
            <div class="modal fade" id="myModal" data-backdrop="static">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 id="header">User Creation</h4>
                            <h4 id="Updateheader" style="display:none">UpdateUser Creation</h4>
                            <input type="hidden" id="txtRecID" />
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label for="name" class="control-label">UserName</label>
                                    <input type="text" class="form-control" placeholder="Enter User Name" id="txtUserName" name="txtUserName" required="required" ng-model="User.UserName" />
                                </div>

                                <div class="col-sm-4">
                                    <label for="name" class="control-label">Email Id</label>
                                    <input type="text" class="form-control" placeholder="Enter Email" id="txtEmailId" name="txtEmailId" required="required" ng-model="User.EmailID" />
                                </div>

                                <div class="col-sm-4">
                                    <label for="name" class="control-label">Contact Nos</label>
                                    <input type="text" class="form-control" placeholder="Enter Contact Nos" id="txtContactNos" name="txtContactNos" required="required" ng-model="User.ContactNo" />
                                </div>
                            </div>
                            <p></p>
                            <div class="row">
                                <div class="col-sm-4">
                                    <label for="newPassword" class="control-label">Password</label>
                                    <input type="password" class="form-control" placeholder="Enter Password" id="txtPassword" name="txtPassword" required="required" ng-model="User.Password" />

                                </div>

                                <div class="col-sm-4">
                                    <label for="newPasswordConfirm" class="control-label">Confirm Password</label>
                                    <input type="password" class="form-control" placeholder="Enter Confirm Password" id="txtConfirmPassword" name="txtConfirmPassword" required="required" ng-model="User.ConfirmPassword" />

                                </div>

                                <div class="col-sm-4">
                                    <label for="uUserTypes">User Type</label>
                                    <select class="form-control" id="cmbUserTypes" name="cmbUserTypes" required ng-model="User.UserType">
                                        <option value="">-- Select User Type --</option>
                                        <option value="Admin">Admin</option>
                                        <option value="User">User</option>
                                        <option value="RH">Regional Head</option>
                                    </select>
                                </div>
                            </div>
                            <p></p>
                            <div class="row">
                                <div class="col-sm-4">
                                    <label for="uactive">Status</label>
                                    <select class="form-control" id="cmbActive" name="cmbActive" required ng-model="User.Status">
                                        <option value="">-- Select Status --</option>
                                        <option value="1" selected>Active</option>
                                        <option value="0">InActive</option>
                                    </select>
                                </div>
                                <div class="col-sm-4">
                                    <label for="uRegion">Region</label>
                                    <select class="form-control" id="cmbRegion" name="cmbRegion" required ng-model="User.RegionID">
                                        <option value="">-- Select Status --</option>
                                        <option value="1"> AP & TS </option>
                                        <option value="2"> BR & JH </option>
                                        <option value="3"> DL & WU </option>
                                        <option value="4"> GJ & RJ </option>
                                        <option value="5"> GOA REGION </option>
                                        <option value="6"> KA </option>
                                        <option value="7"> KL </option>
                                        <option value="8"> MH </option>
                                        <option value="9"> MPC </option>
                                        <option value="10"> NE </option>
                                        <option value="11"> PJK </option>
                                        <option value="12"> TN </option>
                                        <option value="13"> UP,UK,CG & MPE </option>
                                        <option value="14"> WB & OD </option>
                                        <option value="0"> ALL </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="button" id="btnSaveUserDetails" class="btn btn-primary" ng-click="SaveUserDetails()">Save</button>
                            <button type="button" id="btnUpdateUserDetails" class="btn btn-primary" ng-click="UpdateUserDetails()" style="display:none">Update</button>
                            <button type="button" id="btnclose" class="btn btn-warning" data-dismiss="modal" onclick="location.href='@Url.Action("Index", "User")'">Close</button>
                            <button type="reset" id="btnReset" class="btn btn-secondary" style="display: none">Reset</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>


</body>
</html>
